@model List<AtikProj.Models.AtikKayit>
@{
    ViewData["Title"] = "Atƒ±k Y√∂netim Paneli";
    var toplamMiktar = Model.Sum(m => m.MiktarTon);
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2563eb;
            --success-color: #10b981;
            --danger-color: #ef4444;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .main-container {
            padding: 2rem 0;
        }

        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 2rem;
        }

        .stat-value {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-color);
            margin: 0;
        }

        .stat-label {
            color: #64748b;
            font-size: 1.1rem;
            margin-top: 0.5rem;
        }

        .collapse-trigger {
            background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            width: 100%;
            text-align: left;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s;
            margin-bottom: 1rem;
        }

        .collapse-trigger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        }

        .collapse-trigger i {
            transition: transform 0.3s;
        }

        .collapse-trigger[aria-expanded="true"] i {
            transform: rotate(180deg);
        }

        .form-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .data-table {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .table-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, #1e40af 100%);
            color: white;
            padding: 1.5rem;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            border-bottom: 2px solid #e2e8f0;
            padding: 1rem;
            font-weight: 600;
            color: #475569;
        }

        .table tbody td {
            padding: 1rem;
            vertical-align: middle;
        }

        .badge-ton {
            background: #dbeafe;
            color: var(--primary-color);
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
        }

        .badge-kg {
            background: #fef3c7;
            color: #d97706;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #64748b;
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.3;
        }

        .btn-delete {
            background: none;
            border: none;
            color: var(--danger-color);
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-delete:hover {
            transform: scale(1.2);
        }

        .form-control, .form-select {
            border-radius: 8px;
            border: 2px solid #e2e8f0;
            padding: 0.75rem;
        }

        .form-control.is-valid {
            border-color: var(--success-color);
        }

        .form-control.is-invalid {
            border-color: var(--danger-color);
        }

        .loading-spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 3px solid #f3f4f6;
            border-top: 3px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-left: 10px;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="container">
            <!-- Header Stats -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="stat-card">
                        <i class="fas fa-chart-line fa-2x mb-3" style="color: var(--primary-color);"></i>
                        <h1 class="stat-value" id="toplamMiktar">@toplamMiktar.ToString("F2")</h1>
                        <p class="stat-label">Toplam Aktif Atƒ±k (Ton)</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="stat-card">
                        <i class="fas fa-list fa-2x mb-3" style="color: var(--success-color);"></i>
                        <h1 class="stat-value" id="kayitSayisi">@Model.Count</h1>
                        <p class="stat-label">Toplam Kayƒ±t Sayƒ±sƒ±</p>
                    </div>
                </div>
            </div>

            <!-- Yeni Atƒ±k Giri≈ü Formu (Collapsible) -->
            <button class="collapse-trigger" type="button" data-bs-toggle="collapse" data-bs-target="#formCollapse">
                <span><i class="fas fa-plus-circle me-2"></i>Yeni Atƒ±k Gir</span>
                <i class="fas fa-chevron-down"></i>
            </button>

            <div class="collapse" id="formCollapse">
                <div class="form-card">
                    <form id="atikGirisForm">
                        <div class="row">
                            <!-- Atƒ±k Kodu -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-barcode me-1"></i>Atƒ±k Kodu *
                                </label>
                                <div class="d-flex align-items-center">
                                    <input type="text" class="form-control" id="atikKodu" placeholder="√ñrn: 16.01.03" required>
                                    <div class="loading-spinner" id="loadingSpinner"></div>
                                </div>
                                <small id="atikKoduError" class="text-danger" style="display:none;"></small>
                            </div>

                            <!-- Atƒ±k Adƒ± (ReadOnly) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag me-1"></i>Atƒ±k Adƒ±
                                </label>
                                <input type="text" class="form-control" id="atikAdi" readonly>
                            </div>

                            <!-- Miktar -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-weight me-1"></i>Miktar *
                                </label>
                                <input type="number" class="form-control" id="miktar" step="0.01" min="0.01" placeholder="0.00" required>
                            </div>

                            <!-- Birim -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-balance-scale me-1"></i>Birim *
                                </label>
                                <select class="form-select" id="birim" required>
                                    <option value="">Se√ßiniz</option>
                                    <option value="Ton">Ton</option>
                                    <option value="Kg">Kg</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            <button type="reset" class="btn btn-secondary">
                                <i class="fas fa-undo me-2"></i>Temizle
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Ge√ßmi≈ü Atƒ±k Kayƒ±tlarƒ± -->
            <div class="data-table">
                <div class="table-header">
                    <h4 class="mb-0"><i class="fas fa-history me-2"></i>Ge√ßmi≈ü Atƒ±k Kayƒ±tlarƒ±</h4>
                </div>
                
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table" id="atikTable">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Atƒ±k Kodu</th>
                                    <th>Atƒ±k Adƒ±</th>
                                    <th>Miktar</th>
                                    <th>Birim</th>
                                    <th>Ton</th>
                                    <th>ƒ∞≈ülem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kayit in Model)
                                {
                                    <tr data-id="@kayit.Id">
                                        <td>@kayit.GirisTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td><code>@kayit.AtikKodu</code></td>
                                        <td>@kayit.AtikAdi</td>
                                        <td><strong>@kayit.Miktar.ToString("F2")</strong></td>
                                        <td>
                                            <span class="@(kayit.Birim == "Ton" ? "badge-ton" : "badge-kg")">
                                                @kayit.Birim
                                            </span>
                                        </td>
                                        <td>@kayit.MiktarTon.ToString("F3")</td>
                                        <td>
                                            <button class="btn-delete" onclick="deleteKayit('@kayit.Id')">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <h5>Hen√ºz atƒ±k kaydƒ± yok</h5>
                        <p>Yukarƒ±daki "Yeni Atƒ±k Gir" butonuna tƒ±klayarak ilk kaydƒ±nƒ±zƒ± olu≈üturun</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        var kodGecerli = false;

        // Atƒ±k kodu validation
        $('#atikKodu').on('blur keypress', function(e) {
            if (e.type === 'keypress' && e.which !== 13) return;
            if (e.type === 'keypress') e.preventDefault();
            
            var kod = $(this).val().trim();
            if (!kod) return;

            $('#loadingSpinner').show();

            $.post('/AtikNoktasi/ValidateAtikKodu', { atikKodu: kod }, function(data) {
                $('#loadingSpinner').hide();
                if (data.valid) {
                    kodGecerli = true;
                    $('#atikKodu').removeClass('is-invalid').addClass('is-valid');
                    $('#atikKoduError').hide();
                    $('#atikAdi').val(data.atikAdi);
                } else {
                    kodGecerli = false;
                    $('#atikKodu').removeClass('is-valid').addClass('is-invalid');
                    $('#atikKoduError').text(data.message).show();
                    $('#atikAdi').val('');
                }
                checkForm();
            });
        });

        // Form validation
        $('#miktar, #birim').on('input change', checkForm);

        function checkForm() {
            var miktar = parseFloat($('#miktar').val());
            var birim = $('#birim').val();
            $('#submitBtn').prop('disabled', !(kodGecerli && miktar > 0 && birim));
        }

        // Form submit
        $('#atikGirisForm').on('submit', function(e) {
            e.preventDefault();

            var formData = {
                atikKodu: $('#atikKodu').val(),
                atikAdi: $('#atikAdi').val(),
                miktar: $('#miktar').val(),
                birim: $('#birim').val()
            };

            $.post('/AtikNoktasi/AtikKaydet', formData, function(response) {
                if (response.success) {
                    alert('‚úÖ Ba≈üarƒ±yla kaydedildi!\n\nüìä Toplam: ' + response.toplamMiktar.toFixed(2) + ' ton' +
                          (response.uyari ? '\n\n‚ö†Ô∏è ' + response.uyari : ''));
                    location.reload(); // Sayfayƒ± yenile
                } else {
                    alert('‚ùå Hata: ' + response.message);
                }
            });
        });

        // Delete kayƒ±t
        function deleteKayit(id) {
            if (!confirm('Bu kaydƒ± silmek istediƒüinizden emin misiniz?')) return;

            $.post('/AtikNoktasi/AtikSil', { id: id }, function(response) {
                if (response.success) {
                    $('tr[data-id="' + id + '"]').fadeOut(300, function() {
                        $(this).remove();
                        location.reload();
                    });
                } else {
                    alert('‚ùå Silme hatasƒ±: ' + response.message);
                }
            });
        }
    </script>
</body>
</html>