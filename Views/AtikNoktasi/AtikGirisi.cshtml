@{
    ViewData["Title"] = "Atık Girişi";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2563eb;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
        }

        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            border: none;
            border-radius: 12px;
        }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, #1e40af 100%);
            border-radius: 12px 12px 0 0 !important;
            padding: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #475569;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border-radius: 8px;
            border: 2px solid #e2e8f0;
            padding: 0.75rem;
            transition: all 0.3s;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

        .btn-primary {
            background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);
        }

        .btn-secondary {
            background-color: #64748b;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
        }

        .validation-message {
            display: none;
            color: var(--danger-color);
            font-size: 0.875rem;
            margin-top: 0.5rem;
            font-weight: 500;
        }

        .validation-message.show {
            display: block;
        }

        .form-control:disabled, .form-control[readonly] {
            background-color: #f1f5f9;
            cursor: not-allowed;
        }

        .form-control.is-invalid,
        .form-select.is-invalid {
            border-color: var(--danger-color);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23ef4444'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23ef4444' stroke='none'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(.375em + .1875rem) center;
            background-size: calc(.75em + .375rem) calc(.75em + .375rem);
        }

        .form-control.is-valid,
        .form-select.is-valid {
            border-color: var(--success-color);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%2310b981' d='M2.3 6.73.6 4.53c-.4-1.04.46-1.4 1.1-.8l1.1 1.4 3.4-3.8c.6-.63 1.6-.27 1.2.7l-4 4.6c-.43.5-.8.4-1.1.1z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(.375em + .1875rem) center;
            background-size: calc(.75em + .375rem) calc(.75em + .375rem);
        }

        .success-badge {
            background-color: #dcfce7;
            color: var(--success-color);
            padding: 0.25rem 0.75rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 600;
            display: inline-block;
            margin-top: 0.5rem;
        }

        .info-text {
            color: #64748b;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        .loading-spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 3px solid #f3f4f6;
            border-top: 3px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-left: 10px;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-white">
                        <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Yeni Atık Girişi</h4>
                    </div>
                    <div class="card-body p-4">
                        <form id="atikGirisForm">
                            
                            <!-- Atık Kodu -->
                            <div class="mb-4">
                                <label for="atikKodu" class="form-label">
                                    <i class="fas fa-barcode me-1"></i>Atık Kodu *
                                </label>
                                <div class="d-flex align-items-center">
                                    <input type="text" 
                                           class="form-control" 
                                           id="atikKodu" 
                                           name="atikKodu" 
                                           placeholder="Örn: 16.01.03" 
                                           required>
                                    <div class="loading-spinner" id="loadingSpinner"></div>
                                </div>
                                <div id="atikKoduError" class="validation-message">
                                    Bu atık kodu sistemde bulunamadı!
                                </div>
                                <small class="info-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Atık kodu girdikten sonra Enter tuşuna basın veya alandan çıkın
                                </small>
                            </div>

                            <!-- Atık Adı (Otomatik Doldurulacak) -->
                            <div class="mb-4">
                                <label for="atikAdi" class="form-label">
                                    <i class="fas fa-tag me-1"></i>Atık Adı
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="atikAdi" 
                                       name="atikAdi" 
                                       readonly 
                                       placeholder="Atık kodu girildikten sonra otomatik dolacak">
                                <div id="atikKaynakBadge"></div>
                            </div>

                            <!-- Miktar -->
                            <div class="mb-4">
                                <label for="miktar" class="form-label">
                                    <i class="fas fa-weight me-1"></i>Miktar *
                                </label>
                                <input type="number" 
                                       class="form-control" 
                                       id="miktar" 
                                       name="miktar" 
                                       step="0.01" 
                                       min="0.01" 
                                       placeholder="0.00" 
                                       required>
                                <div id="miktarError" class="validation-message">
                                    Miktar 0'dan büyük olmalıdır!
                                </div>
                            </div>

                            <!-- Birim -->
                            <div class="mb-4">
                                <label for="birim" class="form-label">
                                    <i class="fas fa-balance-scale me-1"></i>Birim *
                                </label>
                                <select class="form-select" id="birim" name="birim" required>
                                    <option value="">Birim Seçiniz</option>
                                    <option value="Ton">Ton</option>
                                    <option value="Kg">Kg</option>
                                </select>
                                <div id="birimError" class="validation-message">
                                    Lütfen bir birim seçiniz!
                                </div>
                            </div>

                            <!-- Butonlar -->
                            <div class="d-flex gap-2">
                                <button type="submit" id="submitBtn" class="btn btn-primary" disabled>
                                    <i class="fas fa-save me-2"></i>Kaydet
                                </button>
                                <button type="reset" class="btn btn-secondary">
                                    <i class="fas fa-undo me-2"></i>Temizle
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            var kodGecerli = false;

            // Atık kodu blur olayı (kullanıcı inputtan çıktığında)
            $('#atikKodu').on('blur', function() {
                validateAtikKodu();
            });

            // Atık kodu Enter tuşu ile de kontrol edilebilir
            $('#atikKodu').on('keypress', function(e) {
                if (e.which === 13) { // Enter tuşu
                    e.preventDefault();
                    validateAtikKodu();
                }
            });

            // Atık kodu validation fonksiyonu
            function validateAtikKodu() {
                var kod = $('#atikKodu').val().trim();
                
                if (kod === '') {
                    resetKodValidation();
                    return;
                }

                // Loading göster
                $('#loadingSpinner').show();

                // AJAX isteği
                $.post('/AtikNoktasi/ValidateAtikKodu', { atikKodu: kod }, function(data) {
                    $('#loadingSpinner').hide();
                    
                    if (data.valid) {
                        // Kod geçerli
                        kodGecerli = true;
                        $('#atikKodu').removeClass('is-invalid').addClass('is-valid');
                        $('#atikKoduError').removeClass('show');
                        $('#atikAdi').val(data.atikAdi);
                        
                        // Kaynak badge göster
                        $('#atikKaynakBadge').html('<span class="success-badge"><i class="fas fa-check-circle me-1"></i>' + data.kaynak + '</span>');
                        
                        checkFormValidity();
                    } else {
                        // Kod geçersiz
                        kodGecerli = false;
                        $('#atikKodu').removeClass('is-valid').addClass('is-invalid');
                        $('#atikKoduError').text(data.message).addClass('show');
                        $('#atikAdi').val('');
                        $('#atikKaynakBadge').html('');
                        $('#submitBtn').prop('disabled', true);
                    }
                }).fail(function() {
                    $('#loadingSpinner').hide();
                    kodGecerli = false;
                    $('#atikKodu').removeClass('is-valid').addClass('is-invalid');
                    $('#atikKoduError').text('Bağlantı hatası! Lütfen tekrar deneyin.').addClass('show');
                    $('#submitBtn').prop('disabled', true);
                });
            }

            // Miktar kontrolü
            $('#miktar').on('input blur', function() {
                var miktar = parseFloat($(this).val());
                if (miktar > 0) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                    $('#miktarError').removeClass('show');
                } else if ($(this).val() !== '') {
                    $(this).removeClass('is-valid').addClass('is-invalid');
                    $('#miktarError').addClass('show');
                } else {
                    $(this).removeClass('is-valid is-invalid');
                    $('#miktarError').removeClass('show');
                }
                checkFormValidity();
            });

            // Birim kontrolü
            $('#birim').on('change', function() {
                if ($(this).val() !== '') {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                    $('#birimError').removeClass('show');
                } else {
                    $(this).removeClass('is-valid').addClass('is-invalid');
                    $('#birimError').addClass('show');
                }
                checkFormValidity();
            });

            // Form submit
            $('#atikGirisForm').on('submit', function(e) {
                e.preventDefault();
                
                if (!kodGecerli) {
                    alert('Lütfen geçerli bir atık kodu giriniz!');
                    return;
                }

                var formData = {
                    atikKodu: $('#atikKodu').val(),
                    atikAdi: $('#atikAdi').val(),
                    miktar: $('#miktar').val(),
                    birim: $('#birim').val()
                };

                // TODO: Backend'e kaydetme işlemi
                console.log('Form Data:', formData);
                alert('Atık başarıyla kaydedildi! (Şimdilik console\'da)');
                
                // Formu temizle
                resetForm();
            });

            // Reset butonu
            $('button[type="reset"]').on('click', function() {
                resetForm();
            });

            // Form geçerliliğini kontrol et
            function checkFormValidity() {
                var miktar = parseFloat($('#miktar').val());
                var birim = $('#birim').val();
                
                if (kodGecerli && miktar > 0 && birim !== '') {
                    $('#submitBtn').prop('disabled', false);
                } else {
                    $('#submitBtn').prop('disabled', true);
                }
            }

            // Kod validation sıfırlama
            function resetKodValidation() {
                $('#atikKodu').removeClass('is-valid is-invalid');
                $('#atikKoduError').removeClass('show');
                $('#atikAdi').val('');
                $('#atikKaynakBadge').html('');
                kodGecerli = false;
                $('#submitBtn').prop('disabled', true);
            }

            // Tüm formu sıfırla
            function resetForm() {
                $('#atikGirisForm')[0].reset();
                $('.form-control, .form-select').removeClass('is-valid is-invalid');
                $('.validation-message').removeClass('show');
                $('#atikKaynakBadge').html('');
                kodGecerli = false;
                $('#submitBtn').prop('disabled', true);
            }
        });
    </script>
</body>
</html>