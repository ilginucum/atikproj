@model List<AtikProj.Models.Bildirim>

@{
    ViewData["Title"] = "Bildirimler";
    Layout = "_Layout";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

<style>
    .page-header {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }

    .bildirim-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: all 0.3s;
        border-left: 4px solid #64748b;
    }

    .bildirim-card.okunmamis {
        border-left-color: #ef4444;
        background: #fef2f2;
    }

    .bildirim-card.ton5 {
        border-left-color: #f59e0b;
        background: #fffbeb;
    }

    .bildirim-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(0,0,0,0.12);
    }

    .bildirim-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .bildirim-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .bildirim-mesaj {
        font-size: 1.05rem;
        line-height: 1.6;
        color: #1e293b;
    }

    .bildirim-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #e2e8f0;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .empty-state i {
        font-size: 4rem;
        color: #cbd5e1;
        margin-bottom: 1rem;
    }

    .btn-okundu {
        background: #10b981;
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s;
    }

    .btn-okundu:hover {
        background: #059669;
        transform: translateY(-1px);
        color: white;
    }

    .bildirim-stats {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .stat-item {
        text-align: center;
        padding: 1rem;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #64748b;
        font-size: 0.9rem;
        font-weight: 500;
    }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-2">
                <i class="fas fa-bell me-2"></i>Bildirimler
            </h2>
            <p class="mb-0 opacity-75">Sistem bildirimleri ve uyarılar</p>
        </div>
        <div>
            <a href="@Url.Action("SevkiyatPlanla", "Dashboard")" class="btn btn-success me-2">
                <i class="fas fa-truck me-2"></i>Sevkiyat Planla
            </a>
            @if (Model.Any(b => b.Okundu))
            {
                <button class="btn btn-danger me-2" id="btnTemizle">
                    <i class="fas fa-trash me-2"></i>Okunmuşları Temizle
                </button>
            }
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i>Dashboard'a Dön
            </a>
        </div>
    </div>
</div>

    <!-- İstatistikler -->
    <div class="bildirim-stats">
        <div class="row">
            <div class="col-md-4">
                <div class="stat-item">
                    <div class="stat-number text-primary">@Model.Count</div>
                    <div class="stat-label">Toplam Bildirim</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-item">
                    <div class="stat-number text-danger">@Model.Count(b => !b.Okundu)</div>
                    <div class="stat-label">Okunmamış</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-item">
                    <div class="stat-number text-success">@Model.Count(b => b.Okundu)</div>
                    <div class="stat-label">Okunmuş</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bildirimler Listesi -->
    <div class="row">
        <div class="col-12">
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <i class="fas fa-bell-slash"></i>
                    <h4 class="mt-3 mb-2">Henüz bildirim bulunmuyor</h4>
                    <p class="text-muted">Yeni bildirimler burada görünecektir.</p>
                </div>
            }
            else
            {
                @foreach (var bildirim in Model)
                {
                    <div class="bildirim-card @(bildirim.Okundu ? "" : bildirim.BildirimTipi == "5TonUyarisi" ? "ton5 okunmamis" : "okunmamis")" 
                         data-bildirim-id="@bildirim.Id">
                        <div class="bildirim-header">
                            <div class="bildirim-icon" style="background-color: @(bildirim.BildirimTipi == "10TonUyarisi" ? "#fee2e2" : bildirim.BildirimTipi == "5TonUyarisi" ? "#fef3c7" : "#e0e7ff"); color: @(bildirim.BildirimTipi == "10TonUyarisi" ? "#ef4444" : bildirim.BildirimTipi == "5TonUyarisi" ? "#f59e0b" : "#6366f1");">
                                @if (bildirim.BildirimTipi == "10TonUyarisi")
                                {
                                    <i class="fas fa-exclamation-triangle"></i>
                                }
                                else if (bildirim.BildirimTipi == "5TonUyarisi")
                                {
                                    <i class="fas fa-exclamation-circle"></i>
                                }
                                else if (bildirim.BildirimTipi == "SevkiyatBildirimi")
                                {
                                    <i class="fas fa-truck"></i>
                                }
                                else
                                {
                                    <i class="fas fa-info-circle"></i>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    @if (!bildirim.Okundu)
                                    {
                                        <span class="badge bg-danger">YENİ</span>
                                    }
                                    @if (bildirim.BildirimTipi == "10TonUyarisi")
                                    {
                                        <span class="badge bg-danger">KRİTİK</span>
                                    }
                                    else if (bildirim.BildirimTipi == "5TonUyarisi")
                                    {
                                        <span class="badge bg-warning">UYARI</span>
                                    }
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        @bildirim.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                </div>
                                <p class="bildirim-mesaj mb-0 @(bildirim.Okundu ? "text-muted" : "fw-bold")">
                                    @bildirim.Mesaj
                                </p>
                            </div>
                        </div>

                        @if (bildirim.ToplamMiktar > 0)
                        {
                            <div class="alert alert-@(bildirim.BildirimTipi == "10TonUyarisi" ? "danger" : bildirim.BildirimTipi == "5TonUyarisi" ? "warning" : "info") mb-0 mt-3 py-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong><i class="fas fa-weight-hanging me-2"></i>Toplam Aktif Atık:</strong> 
                                        <span class="fs-5">@bildirim.ToplamMiktar.ToString("F2") ton</span>
                                    </div>
                                    @if (bildirim.BildirimTipi == "10TonUyarisi")
                                    {
                                        <span class="badge bg-danger fs-6">Sevkiyat Gerekli!</span>
                                    }
                                    else if (bildirim.BildirimTipi == "5TonUyarisi")
                                    {
                                        <span class="badge bg-warning fs-6">Yakında Sevkiyat</span>
                                    }
                                </div>
                            </div>
                        }

                        <div class="bildirim-footer">
                            <div class="text-muted small">
                                @if (bildirim.Okundu)
                                {
                                    <i class="fas fa-check-circle text-success me-1"></i>
                                    <span>Okundu</span>
                                }
                                else
                                {
                                    <i class="fas fa-circle text-danger me-1" style="font-size: 0.5rem;"></i>
                                    <span>Okunmadı</span>
                                }
                            </div>
                            <div>
                                @if (!bildirim.Okundu)
                                {
                                    <button class="btn btn-okundu okundu-btn" data-id="@bildirim.Id">
                                        <i class="fas fa-check me-1"></i>
                                        Okundu İşaretle
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
    $(document).ready(function() {
        // Toastr ayarları
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };

        // Okundu işaretle
        $('.okundu-btn').click(function() {
            const bildirimId = $(this).data('id');
            const $card = $(this).closest('.bildirim-card');
            const $button = $(this);
            
            $.ajax({
                url: '@Url.Action("BildirimOkundu", "Dashboard")',
                type: 'POST',
                data: { id: bildirimId },
                success: function(response) {
                    if (response.success) {
                        // Kartı güncelle
                        $card.removeClass('okunmamis ton5');
                        $card.find('.badge-danger').remove();
                        $card.find('.bildirim-mesaj').removeClass('fw-bold').addClass('text-muted');
                        
                        // Footer güncelle
                        $card.find('.bildirim-footer').html(`
                            <div class="text-muted small">
                                <i class="fas fa-check-circle text-success me-1"></i>
                                <span>Okundu</span>
                            </div>
                            <div></div>
                        `);
                        
                        toastr.success('Bildirim okundu olarak işaretlendi');
                        
                        // 1 saniye sonra sayfayı yenile
                        setTimeout(function() {
                            location.reload();
                        }, 1000);
                    }
                },
                error: function() {
                    toastr.error('Bir hata oluştu');
                }
            });
        });

        // ⭐ Okunmuşları temizle
        $('#btnTemizle').click(function() {
            if (confirm('Tüm okunmuş bildirimleri silmek istediğinize emin misiniz?')) {
                $.ajax({
                    url: '@Url.Action("OkunmuslariTemizle", "Dashboard")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            toastr.success(response.message);
                            setTimeout(function() {
                                location.reload();
                            }, 1000);
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function() {
                        toastr.error('Bir hata oluştu');
                    }
                });
            }
        });
    });
</script>